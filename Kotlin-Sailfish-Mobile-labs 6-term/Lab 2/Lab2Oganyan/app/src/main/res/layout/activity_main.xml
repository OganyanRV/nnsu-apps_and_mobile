<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/red" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="164dp"
                    android:layout_marginTop="88dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/blue" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="96dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                    app:srcCompat="@drawable/red" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="228dp"
                    android:layout_marginTop="96dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    app:srcCompat="@drawable/blue" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Квадрат"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView13"
                    app:layout_constraintEnd_toEndOf="@+id/imageView13"
                    app:layout_constraintStart_toStartOf="@+id/imageView13"
                    app:layout_constraintTop_toTopOf="@+id/imageView13"
                    app:layout_constraintVertical_bias="0.494" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="true">


                <TableRow
                    android:id="@+id/row_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true">

                    <ImageView
                        android:id="@+id/table_image1"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        app:srcCompat="@drawable/red" />

                    <ImageView
                        android:id="@+id/table_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        app:srcCompat="@drawable/green" />

                    <ImageView
                        android:id="@+id/table_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        app:srcCompat="@drawable/blue" />
                </TableRow>


                <TableRow
                    android:id="@+id/row_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true">

                    <ImageView
                        android:id="@+id/table_image4"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        app:srcCompat="@drawable/pink" />

                    <ImageView
                        android:id="@+id/table_image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="50" />

                    <ImageView
                        android:id="@+id/table_image6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        app:srcCompat="@drawable/black" />
                </TableRow>


            </TableLayout>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:isScrollContainer="true"
                app:columnCount="3"
                app:orientation="horizontal"
                app:rowCount="2">

                <ImageView
                    android:id="@+id/Grid_img1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_weight="120"
                    android:scaleType="center"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:srcCompat="@drawable/red" />

                <ImageView
                    android:id="@+id/Grid_img2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_weight="120"
                    android:scaleType="center"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/Grid_img3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_weight="120"
                    android:scaleType="center"
                    app:layout_column="2"
                    app:layout_row="0"
                    app:srcCompat="@drawable/blue" />

                <ImageView
                    android:id="@+id/Grid_img4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_weight="120"
                    android:scaleType="center"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:srcCompat="@drawable/pink" />

                <ImageView
                    android:id="@+id/Grid_img5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_weight="120"
                    android:scaleType="center"
                    app:layout_column="1"
                    app:layout_row="1" />

                <ImageView
                    android:id="@+id/Grid_img6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_weight="120"
                    android:scaleType="center"
                    app:layout_column="2"
                    app:layout_row="1"
                    app:srcCompat="@drawable/black" />
            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="5"
                    android:rotation="45"
                    android:scaleX="0.5"
                    app:srcCompat="@drawable/black" />
            </LinearLayout>

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutDescription="@xml/activity_main_xml_constraintlayout2_scene">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/red" />
            </androidx.constraintlayout.motion.widget.MotionLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dialog_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <EditText
                    android:id="@+id/first_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/second_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/sum"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Calculate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.939"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.433" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>